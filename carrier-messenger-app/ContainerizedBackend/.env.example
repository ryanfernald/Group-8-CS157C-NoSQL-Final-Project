# .env - Environment variables for docker-compose

# Flask settings
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=a-very-secret-key-change-this # Change this!

# MySQL settings
MYSQL_DATABASE=chat_db
MYSQL_USER=chat_user
MYSQL_PASSWORD=chat_password # Use a strong password
MYSQL_ROOT_PASSWORD=root_secret_password # Use a strong password

# Redis settings
REDIS_URL=redis://redis_db:6379/0

# Database URL for SQLAlchemy
DATABASE_URL=mysql+mysqlconnector://chat_user:chat_password@mysql_db/chat_db